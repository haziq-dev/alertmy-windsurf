{
  "project": {
    "name": "AlertMy",
    "description": "A real-time alert notification system with geospatial capabilities for reporting and viewing incidents",
    "version": "1.0.0",
    "last_updated": "2025-11-03",
    "repository": {
      "type": "git",
      "url": "https://github.com/haziq-dev/alertmy",
      "frontend": "https://github.com/haziq-dev/AlertMy"
    },
    "license": "MIT",
    "environments": {
      "development": "Local development with hot-reload and Expo Go",
      "staging": "Staging for testing with production-like settings",
      "production": "Production environment with Supabase"
    },
    "key_metrics": {
      "target_uptime": "99.9%",
      "api_response_time": "p95 < 300ms",
      "test_coverage": "85% minimum",
      "concurrent_users": "1000+"
    }
  },
  "frontend": {
    "name": "AlertMy Mobile App",
    "path": "AlertMy",
    "type": "React Native (Expo)",
    "sdk_version": "49.0.0",
    "architecture": {
      "data_layer": {
        "database": ["@supabase/supabase-js"],
        "realtime": ["@supabase/realtime-js"],
        "auth": ["@supabase/supabase-js"]
      },
      "core_utilities": {
        "http": ["axios"],
        "state_management": ["React Context", "React Hooks"],
        "environment": ["react-native-config"],
        "storage": ["@react-native-async-storage/async-storage"]
      },
      "location_mapping": {
        "geolocation": ["expo-location"],
        "mapping": ["react-native-maps"],
        "spatial_queries": ["PostGIS via Supabase"]
      },
      "ui_components": {
        "framework": "React Native Paper",
        "navigation": ["@react-navigation/native"],
        "icons": ["@expo/vector-icons"]
      },
      "authentication": ["Supabase Auth", "JWT"]
    },
    "environment": {
      "files": [
        ".env",
        ".env.development",
        ".env.production"
      ],
      "required_variables": [
        "EXPO_PUBLIC_SUPABASE_URL",
        "EXPO_PUBLIC_SUPABASE_ANON_KEY",
        "GOOGLE_MAPS_API_KEY",
        "APP_ENV"
      ]
    },
    "project_structure": {
      "app/": [
        "components/",
        "navigation/",
        "screens/",
        "services/",
        "hooks/",
        "utils/"
      ],
      "key_files": [
        "app.json",
        "babel.config.js",
        "tsconfig.json"
      ]
    },
    "dependencies": {
      "main_file": "package.json",
      "key_packages": [
        {"name": "@supabase/supabase-js", "purpose": "Supabase client for React Native"},
        {"name": "@react-navigation/native", "purpose": "Navigation between screens"},
        {"name": "react-native-maps", "purpose": "Interactive maps for React Native"},
        {"name": "expo-location", "purpose": "Access device location"},
        {"name": "react-native-paper", "purpose": "Material Design components"},
        {"name": "axios", "purpose": "HTTP client for API requests"},
        {"name": "react-native-config", "purpose": "Environment variables management"}
      ]
    },
    "development": {
      "port": 19006,
      "start_command": "npx expo start",
      "build_command": "npx expo prebuild",
      "test_command": "jest",
      "coverage_command": "jest --coverage"
    }
  },
  "backend": {
    "name": "Supabase Backend",
    "type": "Supabase",
    "database": {
      "type": "PostgreSQL",
      "version": "14+",
      "extensions": ["PostGIS", "pgcrypto", "uuid-ossp"],
      "features": [
        "Row Level Security",
        "Realtime Subscriptions",
        "Database Functions",
        "Spatial Queries with PostGIS"
      ]
    },
    "auth": {
      "providers": [
        "Email/Password",
        "OAuth Providers (Google, Apple, etc.)",
        "Magic Links"
      ],
      "security": [
        "Row Level Security",
        "JWT Verification",
        "Rate Limiting"
      ]
    },
    "storage": {
      "type": "Supabase Storage",
      "features": [
        "File Uploads",
        "Access Control",
        "Image Transformations"
      ]
    },
    "api": {
      "type": "REST/Realtime",
      "features": [
        "Auto-generated API",
        "Realtime Subscriptions",
        "Custom Edge Functions"
      ]
    }
  },
  "development": {
    "ide": "VS Code",
    "recommended_extensions": [
      "esbenp.prettier-vscode",
      "dbaeumer.vscode-eslint",
      "bradlc.vscode-tailwindcss",
      "ms-vscode.vscode-typescript-next",
      "expo.vscode-expo-tools"
    ],
    "tools": [
      "Node.js 18+",
      "npm 9+ or yarn 1.22+",
      "Expo CLI",
      "Git",
      "Supabase CLI"
    ]
  },
  "deployment": {
    "platforms": [
      {
        "name": "App Store Connect",
        "type": "iOS",
        "requirements": ["Apple Developer Account"]
      },
      {
        "name": "Google Play Console",
        "type": "Android",
        "requirements": ["Google Play Developer Account"]
      },
      {
        "name": "Expo Application Services",
        "type": "Over-the-air updates",
        "requirements": ["Expo account"]
      }
    ]
  }
}
